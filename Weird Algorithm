#include <bits/stdc++.h>
using namespace std;
 
#define ll long long
#define ar array
 
int main() {
	ios::sync_with_stdio(0);
	cin.tie(0);
	ll a;
	cin >> a;
	cout << a << " ";
	while(a != 1)
    {
	if(a % 2 == 0)
    {
        a= a /2;
        cout << a << " ";
    }else
    {
        a = 3*a + 1;
        cout << a << " ";
    }
 
    }
	return 0;
}
 
